<Hangman_Win>:
    auto_dismiss:False
    size_hint:0.5,0.5
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Sen moige"
        BoxLayout:
            
            Button:
                text:'gasvla'
                
                on_release:
                    root.dismiss()
                    app.root.current='main'
                    app.main_screen.switch.current="listview"
            Button:
                text:"continue"
                on_release:
                    root.dismiss()
                    root.restart()



<Reklama>:
    size_hint:0.5,0.5
    auto_dismiss:False
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Sen waage"
        Button:
            text:"uyure reklamas da miighe erti shansi"
            on_release:
                root.hangman.chance()
                print("shansi")
                root.dismiss()
    
        Button:
            text:"ar msurs"
            on_release:
                root.dismiss()
                root.close()
<Hangman_Lose>:
    size_hint:0.5,0.5
    auto_dismiss:False
    BoxLayout:
        orientation:"vertical"
        Label:
            text:"Sen waage"
        Label:
            text:f"sworia {root.correct}"
            font_name:"DejaVuSans.ttf"
        
        BoxLayout:
            Button:
                text:'gasvla'
                
                on_release:
                    root.dismiss()
                    app.root.current='main'
                    app.main_screen.switch.current="listview"
            Button:
                text:"restart"
                on_release:
                    root.dismiss()
                    root.restart()
            


<Carousel_Item>:
    voice_button:voice_button
    show_translation:show_translation
    pos_hint:{"center_x":.5}   
    MDIconButton:
        id:show_translation
        

        pos_hint:{"y":0, "x":0.025}
        size_hint:1,1
        font_size:sp(34)
        on_release:app.show_translation()
        size_hint:None,None
        icon:"eye-outline"
        theme_icon_color: "Custom"
        icon_color:0,0,0,1
        size:dp(40),dp(40)
    MDIconButton:
        id:voice_button
        canvas.before:
            Color:
                rgba:0,0,0,.1
            Ellipse:
                # pos:self.x, self.y
                # pos_hint:{"center_x":.5}
                pos:self.x+self.width/5, self.y+self.height/5
                size:self.width-self.width/2.5,self.height-self.height/2.5
                # size:self.size
        pos_hint:{"y":0, "x":0.85}
        # size_hint:1,1
        # font_size:sp(34)
        on_release:app.voice_on_off()
        size_hint:None,None
        icon:"volume-high"
        theme_icon_color: "Custom"
        icon_color:0,0,0,0.2
        size:dp(10),dp(10)
        # background_normal:''
        # background_color:0,0,1,1
        
        # font_name:"BPG2.ttf"

